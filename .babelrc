{
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react",
        "@babel/preset-flow"
    ],
    "plugins": [
        "syntax-dynamic-import",
        "@babel/plugin-proposal-class-properties",
        "universal-import",
        "babel-plugin-styled-components",
        "macros"
    ],
    "env": {
        "development": {
            "plugins": [
                "react-hot-loader/babel"
            ]
        }
    }
}